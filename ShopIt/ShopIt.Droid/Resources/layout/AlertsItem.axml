<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/marginBasex30">

  <!--front-->
  <LinearLayout
      android:id="@+id/front"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:gravity="center_vertical"
      android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginBasex2"
        android:layout_marginTop="@dimen/marginBase">

      <RelativeLayout
          android:id="@+id/rlMarker"
          android:layout_width="@dimen/marginBasex3"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_centerVertical="true"
          android:layout_marginLeft="@dimen/marginBasex2"
          android:layout_marginRight="@dimen/marginBasex2">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/green_alert_marker"
            local:MvxBind="Visible IsRead,Converter=ReverseBoolConverter" />
      </RelativeLayout>

      <CustomTextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/marginBasex2"
                android:layout_marginLeft="@dimen/marginBase"
                android:textColor="@color/Green"
                android:textSize="@dimen/textSmall"
                local:MvxBind="Text Time"
                local:textStyle="Regular" />

      <CustomTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_toRightOf="@id/rlMarker"
          android:layout_toLeftOf="@id/tvTime"
          android:text="Alert Title"
          android:textColor="@android:color/black"
          android:textSize="@dimen/textSmall"
          android:ellipsize="end"
          android:maxLines="1"
          android:singleLine="true"
          local:MvxBind="Text Alert.Title"
          local:textStyle="Bold" />


    </RelativeLayout>

    <CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/marginBasex2"
        android:textColor="@color/Grey"
        android:textSize="@dimen/textSmall"
        local:textStyle="Bold"
        android:text="Project Name"/>

    <CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginBasex2"
        android:layout_marginLeft="@dimen/marginBasex2"
        android:ellipsize="end"
        android:maxLines="3"
        android:singleLine="false"
        android:textColor="@android:color/black"
        android:textSize="@dimen/textSmall"
        local:MvxBind="Text Alert.Body"
        local:textStyle="Regular" />
  </LinearLayout>
  
  <!--back-->
  <LinearLayout
      android:id="@+id/back"
      android:layout_width="@dimen/marginBasex30"
      android:layout_height="match_parent"
      android:layout_alignParentRight="true"
      android:translationX="@dimen/marginBasex30"
      android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="@dimen/marginBasex15"
        android:layout_height="match_parent"
        android:background="@color/BGFlag"
        local:MvxBind="Click FlagAlertCommand">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:src="@drawable/ic_white_flag" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="@dimen/marginBasex15"
        android:layout_height="match_parent"
        android:background="@color/BGDelete"
        local:MvxBind="Click DeleteAlertCommand">

      <ImageView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerInParent="true"
          android:src="@drawable/ic_white_delete" />
    </RelativeLayout>
  </LinearLayout>

  

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentBottom="true"
      android:src="@drawable/divider_line" />
</RelativeLayout>