<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_sub_page"
    android:orientation="vertical">

  <!--Top bar-->
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/marginBasex10"
      android:background="@drawable/bg_header"
      android:paddingTop="@dimen/marginBasex2">

    <CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/About"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textMedium"
        local:textStyle="Regular" />

    <ImageView
        android:layout_width="@dimen/marginBasex10"
        android:layout_height="@dimen/marginBasex10"
        android:padding="@dimen/marginBasex2"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/marginBase"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_white_back_arrow"
        local:MvxBind="Click GoBackCommand" />

  </RelativeLayout>

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/marginBasex3">
    <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="@dimen/marginBasex5"
     android:orientation="vertical">
      <CustomTextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/marginBasex3"
          android:layout_marginLeft="@dimen/marginBasex2"
          android:layout_marginRight="@dimen/marginBasex2"
          android:textColor="@android:color/black"
          android:textSize="@dimen/textSmall"
          android:text="@string/AboutDetail"
          local:textStyle="Regular" />

      <RelativeLayout
          android:id="@+id/rlPrivacyPolicy"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/marginBasex3"
          android:background="@drawable/grey_strip"
          local:MvxBind="Click PrivacyPolicyCommand">

        <CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginBasex2"
            android:text="Terms of Service"
            android:textColor="@color/Green"
            android:textSize="@dimen/textSmall"
            local:textStyle="Bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marginBasex2"
            android:layout_weight="1"
            android:src="@drawable/green_foward_arrow" />
      </RelativeLayout>

      <RelativeLayout
          android:id="@+id/rlTermOfService"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginBottom="@dimen/marginBasex6"
          android:background="@drawable/grey_strip"
          local:MvxBind="Click TermsOfServiceCommand">

        <CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/marginBasex2"
            android:text="Privacy Policy"
            android:textColor="@color/Green"
            android:textSize="@dimen/textSmall"
            local:textStyle="Bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/marginBasex2"
            android:layout_weight="1"
            android:src="@drawable/green_foward_arrow" />
      </RelativeLayout>
    </LinearLayout>

  </ScrollView>
 
</LinearLayout>